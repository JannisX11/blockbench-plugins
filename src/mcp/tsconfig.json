{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "outDir": "../../plugins/mcp",
        "rootDir": ".",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "types": [
            "blockbench-types"
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "../../plugins/mcp"
    ]
}